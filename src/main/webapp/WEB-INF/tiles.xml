<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">


<tiles-definitions>

    <definition name="default" template="/WEB-INF/layouts/default.jspx">
        <put-attribute name="menu" value="/WEB-INF/tiles/menu.jspx"/>
        <put-attribute name="header" value="/WEB-INF/tiles/header.jspx"/>
        <put-attribute name="footer" value="/WEB-INF/tiles/footer.jspx"/>
    </definition>

    <definition name="contacts/list" extends="default">
        <put-attribute name="body" value="/WEB-INF/tiles/contacts.jspx"/>
    </definition>

    <definition name="contacts/show" extends="default">
        <put-attribute name="body" value="/WEB-INF/tiles/contact.jspx"/>
    </definition>

    <definition name="contacts/update" extends="default">
        <put-attribute name="body" value="/WEB-INF/tiles/contactEdit.jspx"/>
    </definition>
</tiles-definitions>